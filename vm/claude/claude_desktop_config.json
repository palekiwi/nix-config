{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/mnt/shared",
        "/mnt/labs"
      ]
    }
  },
  "neo4j-aura": {
    "command": "uvx",
    "args": [ "mcp-neo4j-cypher@0.3.0", "--transport", "stdio"  ],
    "env": {
      "NEO4J_URI": "bolt://localhost:7687",
      "NEO4J_USERNAME": "${NEO4J_USER}",
      "NEO4J_PASSWORD": "${NEO4J_PASSWORD}",
      "NEO4J_DATABASE": "neo4j"
    }
  }
}
