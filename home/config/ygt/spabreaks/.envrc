source_up

use flake git+ssh://git@github.com/ygt/sb-scripts#spabreaks

export OPENCODE_PORT="$(generate_port_from_path)"
export OPENCODE_WORKSPACE=.

# Sync opencode
OPENCODE_SRC="$HOME/.config/agent-opencode/ygt/spabreaks"

if [[ -d "$OPENCODE_SRC" ]]; then
    echo "Syncing opencode config..."
    mkdir .opencode
    rsync -av --delete "$OPENCODE_SRC/" .opencode
else
    echo "Warning: Source directory '$OPENCODE_SRC' does not exist"
fi

HOOKS_DIR="$HOME/nix-config/home/config/git/hooks"

hooks_to_install=(
    "post-checkout"
    "post-merge"
    "pre-commit"
    "pre-push"
)

# Install hooks
for hook in "${hooks_to_install[@]}"; do
    if [[ -f "$HOOKS_DIR/$hook" ]]; then
        if [[ ! -f ".git/hooks/$hook" ]] || [[ ".git/hooks/$hook" -ot "$HOOKS_DIR/$hook" ]]; then
            echo "direnv: Installing $hook hook"
            cp "$HOOKS_DIR/$hook" ".git/hooks/$hook"
            chmod +x ".git/hooks/$hook"
        fi
    fi
done

# Set PR info in env variables
if [[ -f .git/pr-info ]]; then
    source .git/pr-info
    export GH_PR_NUMBER
    export GIT_BASE
else
    unset GH_PR_NUMBER GIT_BASE
fi

watch_file .git/pr-info
