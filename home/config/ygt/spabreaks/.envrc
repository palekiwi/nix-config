source_up

use flake git+ssh://git@github.com/ygt/sb-scripts#spabreaks

export OPENCODE_PORT="$(generate_port_from_path)"
export OPENCODE_WORKSPACE=.

sync_opencode_extra_config "$HOME/.config/agent-opencode/ygt/spabreaks"

# Set PR info in env variables
if [[ -f .git/pr-info ]]; then
    source .git/pr-info
    export GH_PR_NUMBER
    export GIT_BASE
else
    unset GH_PR_NUMBER GIT_BASE
fi

watch_file .git/pr-info
